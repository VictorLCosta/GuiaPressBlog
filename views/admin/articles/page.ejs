<%- include('../../partials/header.ejs')  %>
<body>
    <%- include('../../partials/homenavbar.ejs') %>
    <div class="container">
        <div class="row">
            <% result.articles.rows.forEach(article => { %>
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title"><%= article.title %></h2>
                        </div>
                        <div class="card-body">
                            <a href="/<%= article.slug %>" class="btn btn-success">Ler Artigo</a>
                        </div>
                    </div>
                </div>
                <br />
            <% }) %>
        </div>

            <hr />
            <div class="row">
                <div class="col col-12">
                    <% if (result.page > 1) { %>
                        <a href="/articles/page/<%= result.page - 1 %>" style="float: left;"><< Prev</a>
                    <% } else if(result.page == 2) { %>
                        
                    <% } %> 

                    <% if (result.next) { %>
                        <a href="/articles/page/<%= result.page + 1 %>" style="float: right;">Next >></a>
                    <% } %>
                </div>
            </div>
    </div>
</body>
