<%- include('../../partials/header.ejs') %>
<body>
    <%- include('../../partials/navbar.ejs') %>
    <div class="container-fluid">
        <h1>Login</h1>
        <hr />

        <div class="card" style="float: left; width: 30rem;">
            <div class="card-header">
                <h3 class="card-title">Inserir meus dados</h3>
            </div>
            <div class="card-body">
                <form action="/authenticate" method="POST">
                    <div class="form-group">
                        <label for="emailInput">Email</label>
                        <input id="emailInput" class="form-control" type="email" name="email">
                    </div>
                    <div class="form-group">
                        <label for="passInput">Senha</label>
                        <input id="passInput" class="form-control" type="password" name="password">
                    </div>
                    <button type="submit" class="btn btn-outline-primary">Pronto</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include('../../partials/footer.ejs') %>