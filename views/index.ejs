<%- include('partials/header.ejs')  %>
<body>
    <%- include('partials/homenavbar.ejs') %>
    <div class="container-fluid">
        <div class="jumbotron">
            <h1 class="display-4">Bem vindo!</h1>
            <p class="lead">Este é um simples blog do guia do programador</p>
            <hr class="my-4">
            <p>Ele usa classes utilitárias para tipografia e espaçamento de conteúdo, dentro do maior container.</p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Leia mais</a>
          </div>
    </div> 
    <div class="container">
        <div class="row">
            <% articles.forEach(article => { %>
                
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title"><%= article.title %></h2>
                        </div>
                        <div class="card-body">
                            <a href="/<%= article.slug %>" class="btn btn-success">Ler Artigo</a>
                        </div>
                    </div>
                </div>
                <br />
            <% }) %>
        </div>
        <hr />
        <div class="row">
            <div class="col col-12">
                <a href="/articles/page/2" style="float: right;">Next >></a>
            </div>
        </div>
    </div>
</body>
<%- include('partials/footer.ejs') %> 